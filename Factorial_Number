<body>
    <div>
        <input type="text" id="num">
    </div>
    <div>
       <button onclick="func()">get</button>
    </div>
    <h2> Factorial:<span id="res"></span></h2>
</body>
<script>
    function func(){
        let n=document.getElementById("num").value;
        let res=document.getElementById("res");
        let ans=1;
        for(let i=n;i>=1;i--)
       {
         ans=ans*i;
       }
       res.innerText=ans;
       
        
    }
</script>
